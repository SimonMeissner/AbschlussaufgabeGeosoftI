extends layout

block content


    h1 #{title}
    
    h4  Sight: #{sight.features[0].properties.name}

    div(style='margin-left:20px;margin-top:20px')

        h4 In Tours:

        dl
            each tour in sightInTour
                dt
                    a(href=tour.url) #{tour.name}
                

            else
                p The Sight is in no Tours
    
    hr
    p
        a(href=sight.url+'/delete') Delete sight
    p
        a(href=sight.url+'/update') Update sight
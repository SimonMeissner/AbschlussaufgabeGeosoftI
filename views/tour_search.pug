extends layout

block content
  h1 #{title}


  form(method='POST' action='')
    div.form-group
      label(for='tourname') Tourname:
      input#tourname.form-control(type='text' name='name' value=(undefined===tour ? '' : tour.name), required= 'true')
      
    button.btn.btn-primary(type='submit') Submit

  
  if errors
   ul
    for error in errors
     li!= error.msg
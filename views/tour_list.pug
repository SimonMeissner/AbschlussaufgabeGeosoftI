extends layout 

block content 

    h1= title 

    ul
        - tour_list.sort(function(a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        each tour in tour_list
            li
                ul
                    a(href=tour.url) #{tour.name}

                    li(style='list-style-type: none;') #{tour.items}
                    br
                
        else 
            li There are no tours.